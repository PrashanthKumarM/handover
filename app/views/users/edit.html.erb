<div class="jumbotron">
<div class="container">
  <% if current_user %>
  <div class="page-header"><h1 align="center">Handover</h1></div>
  <h2 align="center"> An automatic support escalation system</h2>
  <%= render partial: 'shared/file', locals: {current: "user"} %>
<div class="page-header"><h2>Edit Profile</h2></div>

<%= form_for edit_user_path(@user), :html => {:class => "form-horizontal"} do |f| %>
  <%= render 'shared/errors', object: @user %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :companyname %>
    <%= f.text_field :companyname,  class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :escalationlevel %>
    <%= f.text_field :escalationlevel, class: 'form-control' %>
  </div>
  <%= f.submit "Edit", class: 'btn btn-primary' %>
<% end %>
<% end %>
</div>
</div>